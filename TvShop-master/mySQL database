
use test
CREATE TABLE tv ( TV_ID INT PRIMARY KEY AUTO_INCREMENT,
  TV_NAME VARCHAR(20) NOT NULL ,
  TV_BRAND VARCHAR(20) NOT NULL ,
  TV_DESCRIPTION VARCHAR(200) NOT NULL,
  TV_PRICE INT NOT NULL,
  TV_IMAGE VARCHAR(500) NOT NULL);

use world
select * from tv
drop table tv

